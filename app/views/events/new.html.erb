<h1>New Goal Page</h1>

<% if !current_goal %>
  <h3>First, choose your goal from the menu below:</h3>
  <%= form_for @goal do |f| %>
    <%= f.collection_select(:id, Goal.all, :id, :description, include_blank: "Select a goal") %>
    <br />
    <h3><%= f.label "Or, create a new goal" %></h3>
    <%= f.text_field :description %>
    <%= f.submit %>
  <% end %>
<% end %>

<h3>First, set a goal</h3>

<%= form_for @goal do |f| %>
  <%= f.label "Check if your goal exists here" %>
  <br />
  <%= f.collection_select(:id, Goal.all, :id, :description, include_blank: "Select a goal") %>
  <br />
  <%= f.label "Or, create a new goal" %>
  <%= f.text_field :description %>
  <br />
  <%= f.submit %>

<% end %>
