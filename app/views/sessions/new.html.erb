<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<div class="container">
  <div class="feature">
    <h1>Welcome to Run Tracker</h1>
    <h3>Let us help you keep track of your training runs and running events!</h3>

    <%= form_tag(controller: "sessions", action: "create", method: "post") do %>
      <%= label_tag("Username") %>
      <br />
      <%= text_field_tag(:username) %>
      <br />
      <%= label_tag("Password") %>
      <br />
      <%= password_field_tag(:password) %>
      <br />
      <%= submit_tag("Log In") %>
    <% end %>

    <%= link_to('Log in with GitHub', '/auth/github') %>

    <h3>Not yet a member?</h3>
    <p><%= link_to "Sign Up", new_runner_path %></p>
  </div>
</div>
