<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag(controller: "sessions", action: "create", method: "post") do %>
  <%= label_tag("Username") %>
  <br />
  <%= text_field_tag(:username) %>
  <br />
  <%= label_tag("Password") %>
  <br />
  <%= password_field_tag(:password) %>
  <br />
  <%= submit_tag("Sign In") %>
<% end %>
